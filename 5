java
public class Tribonacci {
    public static int tribonacci(int n) {
        // Базовые случаи
        if (n == 0 || n == 1) {
            return 0;
        }
        if (n == 2) {
            return 1;
        }
        // Рекурсивный случай
        return tribonacci(n - 1) + tribonacci(n - 2) + tribonacci(n - 3);
    }
}
